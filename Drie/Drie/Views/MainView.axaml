<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Drie.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Drie.Views.MainView"
             x:DataType="vm:MainViewModel">
  <StackPanel>
      <Label Content="login" Height="30" Width="120"/>
      <TextBox Name="LoginTb" Height="30" Width="120"/>
      <Label Content="password" Height="30" Width="120"/>
      <TextBox Name="PasswordTb" Height="30" Width="120"/>
      <Button Name="LoginB" Content="login" Height="30" Width="120" HorizontalAlignment="Center" Click="LoginB_OnClick"/>
  </StackPanel>
</UserControl>
